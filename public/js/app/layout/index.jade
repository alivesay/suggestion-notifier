extends layout

block content
  div#app-container.container-fluid.fill(ng-cloak)
    nav#app-navbar.navbar.navbar-default.navbar-fixed-top
      div.container-fluid
        div.navbar-header
          div.navbar-brand
            img(src='images/logo.png')
        div.collapse.navbar-collapse
          ul.nav.navbar-nav.pull-left
            li
              p.navbar-text
                a(ui-sref='suggestions#index') notify
          ul.nav.navbar-nav.pull-right
            li
              div.btn-toolbar
                div.btn-group
                  a#console-btn.btn.btn-xs.btn-default(ng-click='consoleClick()',
                                                       ng-class='{ "disabled": !footerCollapsed }',
                                                       ng-show='auth.isLogged')
                    i.fa.fa-terminal
                  a#settings-btn.btn.btn-xs.btn-default(ng-click='settingsClick()',
                                                            ng-show='auth.isLogged')
                    i.fa.fa-cog
                div.btn-group
                  a#logout-btn.btn.btn-xs.btn-default(ng-click='logoutClick()',
                                                      ng-show='auth.isLogged')
                    i.fa.fa-sign-out
                    | &nbsp;Logout

    div#app-body.fill
      div#app-main-view(ng-class='footerCollapsed || uiRouterState.current.name == "console#index" ? "app-main-view-full" : "app-main-view-default"')
        ui-view
      div#app-footer-view(ng-include='MODULE_PATH + "console/console.index.html"',
                          ng-class='footerCollapsed || uiRouterState.current.name == "console#index" ? "app-footer-view-collapsed" : "app-footer-view-default"')
