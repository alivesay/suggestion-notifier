div(ng-controller='SuggestionsNewController')
  form#new-suggestion-form.form-horizontal(name='newSuggestionForm',
                                           role='form',
                                           novalidate)
    fieldset
      legend New Suggestion
      div.form-group.required(ng-class='{ "has-error": newSuggestionForm.title.$invalid && newSuggestionForm.title.$dirty }')
        label.control-label.col-sm-3(for='title-field') Title
        div.col-sm-9
          input#title-field.form-control(type='text',
                                         name='title',
                                         ng-model='suggestion.title',
                                         required)
      div.form-group.required(ng-class='{ "has-error": newSuggestionForm.author.$invalid && newSuggestionForm.author.$dirty}')
        label.control-label.col-sm-3(for='author-field') Author
        div.col-sm-9
          input#author--field.form-control(type='text',
                                           name='author',
                                           ng-model='suggestion.author',
                                           required)
      div.form-group
        label.control-label.col-sm-3(for='publisher-field') Publisher
        div.col-sm-9
          input#publisher-field.form-control(type='text',
                                             name='publisher',
                                             ng-model='suggestion.publisher')
      div.form-group
        label.control-label.col-sm-3(for='isbn-field') ISBN
        div.col-sm-9
          div.input-group
            span.input-group-addon #
            input#publisher-field.form-control(type='text',
                                               name='isbn',
                                               ng-model='suggestion.isbn')
      div.form-group
        label.control-label.col-sm-3(for='type-field') Type
        div.col-sm-9
          select#type-field.form-control(ng-model='suggestion.type',
                                         ng-init='suggestion.type = "book"',
                                         ng-options="key as value for (key, value) in itemtypes")
      div.form-group
        label.control-label.col-sm-3(for='subject-field') Subject
        div.col-sm-9
          input#subject-field.form-control(type='text',
                                           name='subject',
                                           ng-model='suggestion.subject')
      div.form-group.required(ng-class='{ "has-error": newSuggestionForm.patron.$invalid && newSuggestionForm.patron.$dirty }')
        label.control-label.col-sm-3(for='patron-field') Patron Barcode
        div.col-sm-9
          div.input-group
            span.input-group-addon #
            input#patron-field.form-control(type='text',
                                            name='patron',
                                            ng-model='suggestion.patron',
                                            required)
      div.form-group
        div.col-sm-12
          button.btn.btn.pull-right(ng-click='createNewSuggestion()',
                                    ng-disabled='newSuggestionForm.$invalid',
                                    ng-class='newSuggestionForm.$invalid ? "disabled" : "btn-success"') Create