div(ng-controller='TemplatesNewController')
  form#new-template-form.form-horizontal(name='newTemplateForm',
                                         role='form',
                                         novalidate,
                                         autocomplete='off')
    fieldset
      legend New Template
      div.form-group.required(ng-class='{ "has-error": newTemplateForm.title.$invalid && newTemplateForm.title.$dirty }')
        label.control-label.col-sm-2(for='title-field') Title
        div.col-sm-10
          input#title-field.form-control(type='text',
                                         name='title',
                                         ng-model='template.title',
                                         required)
      div.form-group
        div.col-sm-10.col-sm-offset-2
          div.checkbox
            label
              input#bibrequired-field(type='checkbox',
                                      name='bibrequired',
                                      ng-model='template.bibRequired',
                                      ng-init='template.bibRequired = false')
              | Require bib # when sending this notice?
          div.checkbox
            label
              input#sendcopy-field(type='checkbox',
                                      name='sendcopy',
                                      ng-model='template.sendCopy',
                                      ng-init='template.sendCopy = false')
              | Send copy to selector?
 
      div.form-group.required(ng-class='{ "has-error": newTemplateForm.body.$invalid && newTemplateForm.body.$dirty }')
        label.control-label.col-sm-2(for='body-field') Body
        div.col-sm-10
          ul.nav.nav-tabs
            li.active
              a(data-target='#template-text', data-toggle='tab') Text
            li
              a(data-target='#template-html', data-toggle='tab') HTML
              
          div.tab-content
            div#template-text.tab-pane.active
              textarea#body-field.form-control(name='body',
                                               ng-model='template.body',
                                               rows='12',
                                               required)
            div#template-html.tab-pane
              textarea#html-field.form-control(name='html',
                                               ng-model='template.html',
                                               rows='12')
 
      div.form-group
        div.col-sm-12
          button.btn.pull-right(ng-click='createTemplateClicked()',
                                ng-disabled='newTemplateForm.$invalid',
                                ng-class='newTemplateForm.$invalid ? "btn-default" : "btn-primary"') Create
