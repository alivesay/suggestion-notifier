form(novalidate)
  div.form-group
   div(data-ng-controller='NotifierIndexController')
     div.panel.panel-primary
       div.panel-heading Send Notice
       div.panel-body
         select.form-control
           option Approved
           option Denied
           option Other
         br
         input.form-control(type='text', placeholder='Enter bib# here.')
         br
         textarea.form-control(rows='10')
           | Hello $name,
           | #{' '}
           | Your item $title was approved!
           | #{' '}
           | Bye!
         form
           div.form-group
             button.btn.btn-success.pull-right Send